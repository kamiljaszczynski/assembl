{
  "name": "assembl_v2",
  "version": "2.0.0",
  "description": "Assembl frontend",
  "main": "js/app/index",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "build": "webpack --progress --colors",
    "coverage": "jest --coverage",
    "dev": "webpack -d --watch",
    "eslint": "eslint . --ext .js --ext .jsx --cache",
    "eslint:fix": "eslint . --ext .js --ext .jsx --fix",
    "eslint:table": "eslint . --ext .js --ext .jsx --cache --format table",
    "eslint:summary": "eslint . --ext .js --ext .jsx --cache --format 'node_modules/eslint-friendly-formatter'",
    "i18n:export": "node ./scripts/translations2messages.js && rip json2pot messages.json -k id -o ../locale/assembl-v2.pot && ./scripts/merge_po_files.bash",
    "i18n:import": "rip po2json '../locale/assembl-v2/*.po' -m messages.json -k id -o './translations'"
  },
  "author": "Bluenove",
  "license": "AGPL-3.0",
  "devDependencies": {
    "apollo-test-utils": "^0.3.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^6.2.9",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "fbjs": "^0.8.6",
    "file-loader": "^0.9.0",
    "glob": "^7.1.2",
    "graphql-tools": "^1.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "jest-transform-graphql": "^2.1.0",
    "node-sass": "^3.13.0",
    "react-test-renderer": "^15.4.1",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "apollo-upload-client": "^4.0.3",
    "babel-polyfill": "^6.23.0",
    "bootstrap": "^3.3.7",
    "draft-js": "^0.10.1",
    "graphql": "^0.10.0",
    "graphql-anywhere": "^3.1.0",
    "immutability-helper": "^2.2.0",
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "prop-types": "^15.5.8",
    "react": "^15.4.1",
    "react-apollo": "^1.2.0",
    "react-bootstrap": "^0.31.0",
    "react-datepicker": "^0.41.1",
    "react-dom": "^15.4.1",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-intl-po": "^2.0.2",
    "react-redux": "^4.4.6",
    "react-redux-i18n": "^0.1.1",
    "react-router": "^3.0.0",
    "react-tweet-embed": "^1.0.3",
    "react-virtualized": "^9.8.0",
    "redux": "^3.6.0",
